<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/head"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/login"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/my_head_bg"
                    android:textColor="#FFFFFF"
                    android:text="登录"
                    android:layout_marginTop="18dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f2f2f2f2"/>


            <RelativeLayout
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/all_layout_style">

                <ImageView
                    android:id="@+id/message_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/message"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的消息"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/message_img"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"/>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/item_check"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F2F2"/>

            <RelativeLayout
                android:id="@+id/yjfk_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/all_layout_style">

                <ImageView
                    android:id="@+id/yjfk_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/yjfk"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/yjfk_img"
                    android:layout_marginLeft="15dp"
                    android:text="意见反馈"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/item_check" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F2F2"/>

            <RelativeLayout
                android:id="@+id/gywm_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/all_layout_style">

                <ImageView
                    android:id="@+id/gywm_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/gywm"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/gywm_img"
                    android:text="关于我们"
                    android:textColor="#ff000000"
                    android:textSize="16dp"/>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/item_check" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F2F2"/>

            <RelativeLayout
                android:id="@+id/qchc_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/all_layout_style">

                <ImageView
                    android:id="@+id/qchc_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/qchc"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/qchc_img"
                    android:layout_marginLeft="15dp"
                    android:text="清除缓存"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="574KB"
                    android:layout_marginRight="15dp"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F2F2F2"/>

            <RelativeLayout
                android:id="@+id/dqbb_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/all_layout_style">

                <ImageView
                    android:id="@+id/dqbb_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/dqbb"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dqbb_img"
                    android:layout_marginLeft="15dp"
                    android:text="当前版本"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:text="v1.0.0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />
            </RelativeLayout>






            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/table5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/all_layout_style1"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="退出程序"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#ff000000"
                    android:textSize="16dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
